<center>
<table>
  <tbody>
    <h1 id="page_title">Posts listing</h1>
      <div id="posts_wrapper" class="skinny_wrapper">
      <% @posts.each do |post| %>
        <div class="posts releaseInfo alert-info alert">
          <h2><%= post.title %></h2>
          <div class="image-wrapper">
          <hr><%= image_tag post.avatar.url(:medium) %>
          </div>
          <h5><p><%= post.content.html_safe %></p></h5>
        </div></hr>
          <%= link_to 'Show', post, :class=>"button" %>
          <%= link_to 'Edit', edit_post_path(post), :class=>"button" %>
          <%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?' }, :class=>"button" %></p>
          <% end %>
        </div>
          <%= paginate(@posts) %>
    </div>
  </tbody>
</table>
<br>
</center> 
